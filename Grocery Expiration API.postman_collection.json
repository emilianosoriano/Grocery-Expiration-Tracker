              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201 (Product Created)\", function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Response contains required product fields\", function () {",
                  "  const res = pm.response.json();",
                  "",
                  "  pm.expect(res).to.have.property(\"id\");",
                  "  pm.expect(res).to.have.property(\"name\");",
                  "  pm.expect(res).to.have.property(\"purchaseDate\");",
                  "  pm.expect(res).to.have.property(\"expirationDate\");",
                  "  pm.expect(res).to.have.property(\"daysRemaining\");",
                  "});",
                  "pm.test(\"daysRemaining is a non-negative integer\", function () {",
                  "  const res = pm.response.json();",
                  "",
                  "  pm.expect(res.daysRemaining).to.be.at.least(0);",
                  "  pm.expect(Number.isInteger(res.daysRemaining)).to.be.true;",
                  "});",
                  "pm.test(\"Response matches product schema\", function () {",
                  "  const schema = {",
                  "    type: \"object\",",
                  "    required: [\"id\", \"name\", \"purchaseDate\", \"expirationDate\", \"daysRemaining\"],",
                  "    properties: {",
                  "      id: { type: \"string\" },",
                  "      name: { type: \"string\" },",
                  "      purchaseDate: { type: \"string\" },",
                  "      expirationDate: { type: \"string\" },",
                  "      daysRemaining: { type: \"number\", minimum: 0 }",
                  "    }",
                  "  };",
                  "",
                  "  pm.expect(pm.response.json()).to.have.jsonSchema(schema);",
                  "});",
                  "pm.test(\"Save productId for later use\", function () {",
                  "  const res = pm.response.json();",
                  "  pm.environment.set(\"productId\", res.id);",
                  "});",
                  ""
